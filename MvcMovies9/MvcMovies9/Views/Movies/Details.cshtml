@model MvcMovies9.Models.Movie
@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>
<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>
    <dt class="col-sm-2">Release</dt>
    <dd class="col-sm-10">@Model.ReleaseDate?.ToString("yyyy-MM-dd")</dd>
    <dt class="col-sm-2">Genre</dt>
    <dd class="col-sm-10">@Model.Genre</dd>
    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price.ToString("0.00")</dd>
    <dt class="col-sm-2">Rating</dt>
    <dd class="col-sm-10">@Model.Rating.ToString("0.00")</dd>
</dl>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back</a>
</p>